#include <iostream>
using namespace std;

int main() {
    int number; 
    std::cout << "Введите целое число: ";
    std::cin >> number;
    if (number % 2 == 0) {
        std::cout << "Число " << number << " является четным." << endl;
    } else {
        std::cout << "Число " << number << " является нечетным." << endl;
    }
    return 0;
}
